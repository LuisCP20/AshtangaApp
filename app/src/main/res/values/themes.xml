    <style name="Theme.Ashtanga1.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Ashtanga1.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
