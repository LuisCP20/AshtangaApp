<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ashtanga1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#212121</item>
        <item name ="colorAccent">#E040FB</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="backgroundColor">#FFECB3</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFECB3</item>
        <item name="colorSecondaryVariant">#7F59add7</item>
        <item name="colorOnSecondary">#167ea5</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Ashtanga1.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
